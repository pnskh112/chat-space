.side-bar
  .side-bar__user-name
    .contents
      .name
        = current_user.name
      .icons
        = link_to new_group_path do
          = icon('fa', 'edit',  class: "contents__btn--icon")
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog',  class: "contents__btn--icon")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group),class: "group_class" do
          .side-bar__group-list--name
            = group.name
          .side-bar__group-list--message
          = group.show_last_message
